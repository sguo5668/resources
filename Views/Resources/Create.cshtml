@model EditResourcesViewModel
@using ContosoUniversity.Models.SchoolViewModels

 

<script type="text/javascript" src="//code.jquery.com/jquery-2.1.3.js"></script>


<link rel="stylesheet" type="text/css" href="/css/result-light.css">

<link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

<script type="text/javascript" src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

<script type="text/javascript" src="//cdn.ckeditor.com/4.3.4/standard/ckeditor.js"></script>

<form asp-action="Create" role="form">

	<div class="modal-body form-horizontal">

		<div class="form-group">


			<label asp-for="Key" class="col-lg-3 col-sm-3 control-label"></label>
		</div>
		<div class="form-group">

			<input asp-for="Key" class="form-control" />

		</div>



		<div class="form-group">

			<label asp-for="Value" class="col-lg-3 col-sm-3 control-label"></label>
		</div>

		<div class="form-group">
			<textarea asp-for="Value" id="editor1"></textarea>

		</div>




		<div class="form-group">

			<label asp-for="CultureId" class="col-lg-3 col-sm-3 control-label"></label>
		</div>

		<div class="form-group">
			<select asp-for="CultureId" asp-items="@Model.Cultures" class="form-control">
				<option>Please select</option>
			</select>

		</div>


        <div class="form-group">


            <select asp-for="ResourceType" asp-items="Html.GetEnumSelectList<ResourceType>()">
                <option selected="selected" value="">Please select</option>
            </select>

        </div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>


</form>

<script type='text/javascript'>
//<![CDATA[
	$(function () {
		CKEDITOR.replace('editor1');

		$(document).ready(function () {

			$.fn.modal.Constructor.prototype.enforceFocus = function () {
				modal_this = this
				$(document).on('focusin.modal', function (e) {
					if (modal_this.$element[0] !== e.target && !modal_this.$element.has(e.target).length
						// add whatever conditions you need here:
						&&
						!$(e.target.parentNode).hasClass('cke_dialog_ui_input_select') && !$(e.target.parentNode).hasClass('cke_dialog_ui_input_text')) {
						modal_this.$element.focus()
					}
				})
			};

		});
	});//]]>

</script>